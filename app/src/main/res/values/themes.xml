<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bills" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. 1 line chosen NavBottom el.-->
        <item name="colorPrimary">@color/text_expense</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <!--        main background-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. 1 line Button. 2 don't know-->
        <item name="colorSecondary">@color/text_expense</item>
        <item name="colorSecondaryVariant">@color/text_income</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorBackgroundFloating</item>
        <!-- Customize your theme here. -->
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="android:colorBackgroundFloating">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ThinnerChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">12dp</item>
        <item name="chipMinHeight">18dp</item>
        <item name="android:textAppearance">@style/SmallerText</item>
        <item name="android:clickable">false</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/default_background</item>
        <item name="chipBackgroundColor">?colorOnPrimary</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style name="SmallerText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="BottomNavColor" parent="Theme.AppCompat.Light.Dialog">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="DialogTheme_income" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/text_income</item>                   <!--header background-->
        <item name="colorAccent">@color/text_income</item>                   <!--header background-->
        <item name="android:windowBackground">?colorOnPrimary</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/text_income</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/main_background</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/main_background</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Button_income</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Button_income</item>
    </style>

    <style name="Button_income" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/text_income</item>
    </style>

    <style name="DialogTheme_expense" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/text_expense</item>                   <!--header background-->
        <item name="colorAccent">@color/text_expense</item>                   <!--header background-->
        <item name="android:windowBackground">?colorOnPrimary</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/text_expense</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/main_background</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/main_background</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Button_expense</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Button_expense</item>
    </style>

    <style name="Button_expense" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/text_expense</item>
    </style>

</resources>